{
  "name": "root",
  "scripts": {
    "anvil": "anvil --fork-url $ANVIL_FORK_URL --fork-block-number 15578840",
    "build": "pnpm -r --filter '@wagmi/chains' build && pnpm -r --filter '@wagmi/core' build && pnpm -r --filter './packages/**' --filter './references/packages/**' build",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "cjs:release": "node -r esbuild-register ./scripts/cjs.ts",
    "dev": "pnpm -r --filter './references/packages/chains' build && pnpm -r --filter './references/packages/connectors' --filter './packages/**' dev",
    "docs:build": "pnpm -r --filter './packages/**' --filter './references/packages/**' --filter docs build",
    "docs:dev": "pnpm dev && pnpm --filter docs dev",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "lint:format": "prettier --write",
    "playground": "pnpm dev && pnpm --filter example-dev dev",
    "preinstall": "pnpm i --filter './references/packages/**' --ignore-scripts && npx only-allow pnpm",
    "postinstall": "pnpm dev",
    "prepare": "npx simple-git-hooks",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:typecheck": "vitest typecheck",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.25.2",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@manypkg/get-packages": "^1.1.3",
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^8.4.10",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "17.0.21",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitest/coverage-c8": "^0.25.8",
    "@vitest/ui": "^0.25.8",
    "abitype": "^0.3.0",
    "dedent": "^0.7.0",
    "esbuild": "0.15.13",
    "esbuild-register": "^3.4.2",
    "eslint": "8.17.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-mdx": "^2.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "msw": "^0.47.4",
    "prettier": "^2.8.3",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.25.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm lint:fix"
    ],
    "*.{json,md,mdx,yml}": [
      "pnpm lint:format"
    ]
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "pnpm": ">=7"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.15.13",
      "@wagmi/connectors>@wagmi/core": "workspace:*"
    }
  }
}
