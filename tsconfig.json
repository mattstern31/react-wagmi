{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@wagmi/chains": ["references/packages/chains/src"],
      "@wagmi/connectors": ["references/packages/connectors/src"],
      "@wagmi/connectors/*": ["references/packages/connectors/src/*"],
      "@wagmi/core": ["packages/core/src"],
      "@wagmi/core/*": ["packages/core/src/*"],
      "wagmi": ["packages/react/src"],
      "wagmi/*": ["packages/react/src/*"],
      // TODO: Remove once issue is fixed
      // https://github.com/microsoft/TypeScript/issues/48212
      "abitype": ["packages/core/node_modules/abitype/dist"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "types": [
      "node",
      // TODO: Remove once issue is fixed
      // https://github.com/microsoft/TypeScript/issues/42873
      "@ethersproject/providers"
    ]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "examples/**/*",
    "packages/**/*",
    "scripts/**/*",
    "vitest.config.ts"
  ]
}
